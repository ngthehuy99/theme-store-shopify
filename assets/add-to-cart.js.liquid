  Shopify.addItem = function(variant_id, quantity, callback, attr) {

    var quantity = quantity || 0;
    if(typeof attr == 'undefined'){
      attr = [];
    }
    var params = {
      type: 'POST',
      url: '/cart/add.js',
      data: {quantity: quantity, id:variant_id,properties: attr},
      dataType: 'json',
      success: function(line_item) {

        if ((typeof callback) === 'function') {
          callback(line_item);
        } else {
          $.get('/cart?view=json', function(data) {

            $('.cart-flyout').html(data);
            {% if settings.show_multiple_currencies %}
            Currency.convertAll(shopCurrency, $('[name=currencies]').val());
            {% endif %}
          });
          $.getJSON('/cart.js', function(cart) {
            $(".la-cart-count").html(cart.item_count);
          } );
          $('body').addClass('open-cart-aside');
        }
      },
      error: function(XMLHttpRequest, textStatus) {
        $.onError(XMLHttpRequest, textStatus);
      }
    };
    $.ajax(params);
  };
  
Shopify.removeItem = function(variant_id, callback) {
  var params = {
    type: 'POST',
    url: '/cart/change.js',
